// 1. Tambahkan Enum untuk membatasi jenis pertanyaan yang valid
enum QuestionType {
  SHORT_TEXT
  LONG_TEXT
  RADIO
  CHECKBOX
  DROPDOWN
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String
  forms    Form[]
}

model Form {
  id          String     @id @default(uuid())
  title       String
  description String?
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  questions   Question[] 
}

model Question {
  id          String       @id @default(uuid())
  formId      String
  form        Form         @relation(fields: [formId], references: [id], onDelete: Cascade)
  
  text        String        
  type        QuestionType 
  isRequired  Boolean      @default(false)  
  order       Int           
  
  options     Option[]
}

model Option {
  id          String   @id @default(uuid())
  questionId  String
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  text        String    
  order       Int       
}