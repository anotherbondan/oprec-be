generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum QuestionType {
  SHORT_TEXT
  LONG_TEXT
  RADIO
  CHECKBOX
  DROPDOWN
}

enum FormStatus {
  DRAFT
  PUBLISHED
  CLOSED
}

model User {
  id       String      @id @default(uuid())
  email    String   @unique
  name     String
  password String
  forms    Form[]
}

model Form {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      FormStatus @default(DRAFT)
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  questions   Question[] 
}

model Question {
  id          String       @id @default(uuid())
  formId      String
  form        Form         @relation(fields: [formId], references: [id], onDelete: Cascade)
  
  text        String        
  type        QuestionType 
  isRequired  Boolean      @default(false)  
  order       Int           
  
  options     Option[]
}

model Option {
  id          String   @id @default(uuid())
  questionId  String
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  text        String    
  order       Int       
}